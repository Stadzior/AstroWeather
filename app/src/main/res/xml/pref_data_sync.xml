<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Łódź"
        android:inputType="text"
        android:key="longitude"
        android:lines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_longitude" />

    <ListPreference
        android:defaultValue="Metric"
        android:entries="@array/pref_directions_values"
        android:entryValues="@array/pref_directions_values"
        android:key="directions"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_directions" />
</PreferenceScreen>
