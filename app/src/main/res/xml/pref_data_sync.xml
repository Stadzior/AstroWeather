<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="180"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:key="sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_frequency" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue=""
        android:inputType="number"
        android:key="OK"
        android:lines="2"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_longitude" />
    <EditTextPreference
    android:capitalize="words"
    android:defaultValue=""
    android:inputType="number"
    android:key="OK"
    android:lines="2"
    android:selectAllOnFocus="true"
    android:singleLine="true"
    android:title="@string/pref_latitude" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_directions_values"
        android:entryValues="@array/pref_directions_values"
        android:key="directions"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_directions" />
</PreferenceScreen>
